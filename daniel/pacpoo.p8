pico-8 cartridge // http://www.pico-8.com
version 15
__lua__
function _init()
x=64
y=32
d=0
lives=10
t=0
end

function _draw()
cls()
f=flr(t/4)%2
spr(1+d+f*16,x,y)
print(lives,0,0)
print(x,0,8)
print(y,0,16)
print(d,0,24)
end

function _update()
if(btn(0)) x=x-1;d=1
if(btn(1)) x=x+1;d=0
if(btn(2)) y=y-1;d=3
if(btn(3)) y=y+1;d=2
t=t+1
end



